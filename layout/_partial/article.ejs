<article class="post">
  <div class="post--heading" style="background-image: url('<%= url_for(post.path) + 'main.jpg' %>');">
    <div class="post--heading-overlay"></div>
    <div class="container">
      <div class="post--heading-content">
        <h1 class="post--title"><%= post.title %></h1>
          <%- partial('./tag-list.ejs', { post: post }) %>
      </div>
    </div>
  </div>
  <div class="container">
    <div>
      <%- partial('./tools.ejs', { title: post.title }) %>
      <%- partial('./meta-data.ejs', { post: post }) %>
    </div>

    <div class="post--content">
      <%- post.content %>
    </div>

    <script>
      function popupwindow(url, title, w, h) {
        var left = (screen.width/2)-(w/2);
        var top = (screen.height/2)-(h/2);
        return window.open(url, title, 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width='+w+', height='+h+', top='+top+', left='+left);
      }
    </script>

    <div class="post--share">
      <a
        class="post--share-icon"
        href="https://twitter.com/intent/tweet?status=<%= post.title %>+<%= post.permalink %>"
        target="_blank"
        onclick="event.preventDefault(); popupwindow('https://twitter.com/intent/tweet?status=<%= post.title %>+<%= post.permalink %>', 'Tweet', 720, 500)"
      >
        <i class="fa fa-twitter"></i>
      </a>
      <a
        class="post--share-icon"
        href="http://www.linkedin.com/shareArticle?mini=true&url=<%= post.permalink %>&title=<%= post.title %>&source=wecodethweb.com"
        target="_blank"
        onclick="event.preventDefault(); popupwindow('http://www.linkedin.com/shareArticle?mini=true&url=<%= post.permalink %>&title=<%= post.title %>&source=wecodethweb.com', 'Tweet', 720, 500)"
      >
        <i class="fa fa-linkedin-square"></i>
      </a>
    </div>

    <h2>Related posts</h2>
    <div class="post--related">
      <% get_related_posts().forEach(function (post) { %>
        <%- partial('./post-block.ejs', { post: post }) %>
      <% }) %>
    </div>

    <div class="post--comments" id="disqus_thread">
      <script>
      var disqus_config = function () {
        this.page.url = "<%= url %>";
        this.page.identifier = <%= post.id %>;
      };

      (function() {
        var d = document, s = d.createElement('script');
        s.src = '//wecodetheweb.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
      })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
    </div>
  </div>
</article>
